<script>
    document.addEventListener('DOMContentLoaded', () => {
        applyDarkMode();
    });

    function applyDarkMode() {
        const isDarkMode = localStorage.getItem('darkMode') === 'true';
        if (isDarkMode) {
            document.body.classList.add('dark-mode');
        }
    }
    </script>
